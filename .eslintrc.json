{
  "extends": [
    "next/core-web-vitals",
    "airbnb-base",
    "airbnb-typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "prettier",
    "plugin:storybook/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "import", "require-explicit-generics", "i18next"],
  "rules": {
    "@next/next/no-img-element": "off",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "react/prop-types": 0,
    "react/require-default-props": "off",
    "@typescript-eslint/no-misused-promises": "off",
    "@typescript-eslint/no-floating-promises": "off",
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/ban-ts-comment": [
      "error",
      {
        "ts-ignore": "allow-with-description",
        "minimumDescriptionLength": 10
      }
    ],
    "import/prefer-default-export": "off",
    "react/jsx-props-no-spreading": [0, "never"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "semi": [2, "always"],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "react/no-invalid-html-attribute": "off",
    "react/no-array-index-key": "off",
    "react/destructuring-assignment": "off",
    "react/function-component-definition": "off",
    "no-underscore-dangle": "off",
    "require-explicit-generics/require-explicit-generics": ["error", ["useState"]],
    "import/no-named-as-default": "off",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "i18next/no-literal-string": [
      "error",
      {
        "mode": "all",
        "jsx-attributes": {
          "exclude": [
            "td",
            "fz",
            "miw",
            "shadow",
            "target",
            "overflow",
            "border",
            "m",
            "mb",
            "mt",
            "itemImage",
            "imageSrc",
            "ml",
            "underline",
            "mode",
            "thousandSeparator",
            "variant",
            "name",
            "prefix",
            "type",
            "h",
            "w",
            "fz",
            "lh",
            "aria-label",
            "size",
            "tt",
            "c",
            "color",
            "sizes",
            "alt",
            "justify",
            "align",
            "direction",
            "value",
            "weight",
            "radius",
            "tooltipDataSource",
            "mx",
            "figure",
            "width",
            "height",
            "opacity",
            "gridAxis",
            "curveType",
            "dataKey",
            "splitColors",
            "truncate",
            "droppableId",
            "modal",
            "defaultColorScheme",
            "position",
            "stackId",
            "fill",
            "stroke",
            "legendPosition",
            "interval",
            "verticalAlign",
            "stackOffset",
            "dir",
            "pos",
            "gap",
            "className",
            "rightSectionWidth",
            "component",
            "bg",
            "ta",
            "fit",
            "id",
            "mt",
            "orientation",
            "regex",
            "key"
          ]
        },
        "words": {
          "exclude": [
            "[0-9!-/:-@[-`{-~â€¢px]+",
            "[A-Z_-]+",
            "var\\(([^)]+)\\)",
            "use server",
            "use client",
            "iad1",
            "force-dynamic",
            "Google",
            "Facebook",
            "Instagram",
            "Twitter",
            "div",
            "low",
            "medium",
            "high",
            "full",
            "requestedConnection"
          ]
        },
        "callees": {
          "exclude": [
            "useTranslations",
            "getTranslations",
            "t",
            "revalidatePath",
            "register",
            "watch",
            "startOf",
            "subtract",
            "format",
            "clsx",
            "useFieldArray",
            "URL",
            "getStyles",
            "updateSelectedOptionIndex",
            "setColorScheme",
            "useMediaQuery",
            "getData",
            "get",
            "createQueryString",
            "endsWith",
            "replace",
            "createTheme",
            "getValue",
            "includes",
            "set",
            "errorHasMessage",
            "getQueryParamIfDefined",
            "delete",
            "c"
          ]
        },
        "object-properties": {
          "exclude": [
            "auto",
            "ml",
            "mt",
            "mb",
            "variant",
            "span",
            "whiteSpace",
            "h",
            "underline",
            "hover",
            "mode",
            "errorMessage",
            "field",
            "type",
            "color",
            "fill",
            "textDecoration",
            "imageAlt",
            "gradient",
            "stroke",
            "innerRadius",
            "display",
            "offset",
            "marginBottom",
            "alt",
            "bgClass",
            "id",
            "key",
            "borderTopLeftRadius",
            "transform",
            "tickLine",
            "strokeDasharray",
            "curveType",
            "orientation",
            "tt",
            "displayName",
            "transition",
            "position",
            "tooltipDataSource",
            "fetchPolicy",
            "errorPolicy",
            "dsn",
            "scale",
            "value",
            "path",
            "cursor",
            "notation",
            "style",
            "accessorKey",
            "grant_type",
            "Content-Type",
            "cache"
          ]
        }
      }
    ]
  }
}
